{
  "manifest_version": 3,
  "name": "EduLens 鼠标增强",
  "version": "1.0.0",
  "description": "网课辅助教学浏览器插件",
  "permissions": ["storage", "activeTab","tabs"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.js"],
      "css": ["style.css"]  
    }
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}

