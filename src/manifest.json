{
  "manifest_version": 3,
  "name": "EduLens 鼠标增强",
  "version": "1.0.0",
  "description": "网课辅助教学浏览器插件",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/main"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}